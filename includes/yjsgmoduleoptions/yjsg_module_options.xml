<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="params" addfieldpath="/plugins/system/yjsg/includes/yjsgmoduleoptions/elements">
		<fieldset name="YJSG_MODULE_OPTIONS" label="YJSG_MODULE_LABEL">
			<field name="module_subtitle"  type="textarea" filter="raw" rows="3" cols="40" class="yjsg-subtitle" default="" label="YJSG_MODULE_SUBTITLE_LABEL" description="YJSG_MODULE_SUBTITLE_DESC" />
			<field name="module_float" type="list" default="0"  class="yjsg-float" label="YJSG_MODULE_FORCEFLOAT_LABEL" description="YJSG_MODULE_FORCEFLOAT_DESC">
				<option value="none">YJSG_MODULE_FORCEFLOAT_OPTION_DONTFORCE</option>
				<option value="right">YJSG_MODULE_FORCEFLOAT_OPTION_FORCERIGHT</option>
				<option value="left">YJSG_MODULE_FORCEFLOAT_OPTION_FORCELEFT</option>
			</field>
			<field name="module_floatwidth" type="text" class="yjsg-float-width" default="" label="YJSG_MODULE_FORCEFLOATWIDTH_LABEL" description="YJSG_MODULE_FORCEFLOATWIDTH_DESC" />
			<field name="module_icon_prefix" type="yjsgfa" class="yjsg-fa" default="" label="YJSG_MODULE_FAICONBEFORE_LABEL" description="YJSG_MODULE_FAICONBEFORE_DESC" />
			<field name="module_icon_suffix" type="yjsgfa" class="yjsg-fa" default="" label="YJSG_MODULE_FAICONAFTER_LABEL" description="YJSG_MODULE_FAICONAFTER_DESC" />
			<field name="before_module"  type="textarea" filter="safehtml" rows="5" cols="50" class="yjsg-before-module" default="" label="YJSG_MODULE_CONTENTBEFORE_LABEL" description="YJSG_MODULE_CONTENTBEFORE_DESC" />
			<field name="after_module"  type="textarea" filter="safehtml" rows="5" cols="50" class="yjsg-after-module" default="" label="YJSG_MODULE_CONTENTAFTER_LABEL" description="YJSG_MODULE_CONTENTAFTER_DESC" />
			<field name="show_in_articles" type="list" default="default" label="YJSG_MODULE_SHOW_IN_ARTICLE_LABEL" description="YJSG_MODULE_SHOW_IN_ARTICLE_DESC">
				<option value="show">Show</option>
				<option value="hide">Hide</option>
			</field>
			<field name="animate" type="list" default="0" label="YJSG_MODULE_ANIMATE" description="YJSG_MODULE_ANIMATE_DESC">
				<option value="1">YJSG_YES</option>
				<option value="0">YJSG_NO</option>
			</field>
			<field name="animation_effect" type="list" default="yjsg-anim-fadeIn" label="YJSG_MODULE_ANIMATE_EFFECT" showon="animate:1" description="YJSG_MODULE_ANIMATE_EFFECT_DESC">
				<option value="yjsg-anim-fadeIn">Fade in</option>
				<option value="yjsg-anim-slideIn-up">Slide in from Bottom</option>
				<option value="yjsg-anim-slideIn-down">Slide in from Top</option>
				<option value="yjsg-anim-slideIn-left">Slide in from Right</option>
				<option value="yjsg-anim-slideIn-right">Slide in from Left</option>
				<option value="yjsg-anim-zoomIn">Zoom In</option>
				<option value="yjsg-anim-zoomOut">Zoom Out</option>
				<option value="yjsg-anim-zoomIn-up">Zoom in from Bottom</option>
				<option value="yjsg-anim-zoomIn-down">Zoom in from Top</option>
				<option value="yjsg-anim-zoomIn-left">Zoom in from Right</option>
				<option value="yjsg-anim-zoomIn-right">Zoom in from Left</option>
				<option value="yjsg-anim-newspaper">Newspaper</option>
				<option value="yjsg-anim-flipIn">Flip In</option>
				<option value="yjsg-anim-unfold">Unfold</option>
				<option value="yjsg-anim-spiral">Spiral</option>
			</field>
			<field name="animation_duration" type="number" default="400" label="YJSG_MODULE_ANIMATE_DURATION" showon="animate:1" description="YJSG_MODULE_ANIMATE_DURATION_DESC" min="0" step="100" />
			<field name="animation_delay" type="number" default="0" label="YJSG_MODULE_ANIMATE_DELAY" showon="animate:1" description="YJSG_MODULE_ANIMATE_DELAY_DESC" min="0" step="100" />
		</fieldset>
	</fields>
</form>
