<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="credentials"
		label="COM_USERS_LOGIN_DEFAULT_LABEL"	>

		<field name="username" type="text"
			class="validate-username inputbox form-field"
			filter="username"
			label="COM_USERS_LOGIN_USERNAME_LABEL"
			required="true"
			size="25"
			validate="username"
		/>

		<field name="password" type="password"
			class="validate-password inputbox form-field"
			filter="raw"
			label="JGLOBAL_PASSWORD"
			required="required"
			size="25"
		/>

	</fieldset>
	
	<fieldset>
		<field name="return" type="hidden" />
	</fieldset>
</form>
